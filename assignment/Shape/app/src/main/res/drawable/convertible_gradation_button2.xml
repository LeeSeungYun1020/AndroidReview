<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:constantSize="true" android:dither="true" android:variablePadding="false">
    <item android:state_pressed="false" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="0"
                android:endColor="#FFFF0000"
                android:startColor="#FF0000FF"
                android:type="linear" />
            <size
                android:width="250dp"
                android:height="100dp" />
            <stroke
                android:width="3dp"
                android:color="#FF000000"
                android:dashWidth="8dp"
                android:dashGap="4dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient
                android:angle="0"
                android:endColor="#FFFF0000"
                android:startColor="#FF0000FF"
                android:type="linear" />
            <size
                android:width="250dp"
                android:height="100dp" />
            <stroke
                android:width="3dp"
                android:color="#FF000000" />
        </shape>
    </item>
</selector>